{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "modules",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "script": {
    "include": "*./modules/**/**",
    "exclude": "*./modules/**/**"
  }
}
